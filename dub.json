{
	"name": "vtkd",
	"description": "A shim library for using parts of libvtk in D",
	"copyright": "Copyright Â© 2019, Robert F. Rau II (Pennsylvania State University)",
	"authors": ["Robert F. Rau II"],
	"targetType": "library",
	"lflags": ["-L${VTKD_PACKAGE_DIR}/cmake/build", "-lvtkFiltersCore-7.1", "-lvtkCommonCore-7.1", "-lvtkCommonDataModel-7.1", "-lvtkCommonExecutionModel-7.1", "-lvtkCommonMath-7.1", "-lvtkCommonMisc-7.1", "-lvtkCommonSystem-7.1", "-lvtkCommonTransforms-7.1", "-lvtkIOXML-7.1", "-lvtkParallelCore-7.1", "-lvtkIOParallelXML-7.1", "-lvtk_shim", "-lstdc++"],
	"preBuildCommands": ["mkdir $VTKD_PACKAGE_DIR/cmake/build ; cd $VTKD_PACKAGE_DIR/cmake/build ; cmake ../ -DBUILD_TYPE=$BUILD_TYPE; make"],
    "buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "debugInfo"]
		},
		"debug-openmpi": {
			"buildOptions": ["debugMode", "debugInfo"],
			"versions": ["openmpi"]
		},
		"debug-native": {
			"buildOptions": ["debugMode", "debugInfo"],
			"dflags": ["-mcpu=native"]
		},
		"debug-native-512": {
			"buildOptions": ["debugMode", "debugInfo"],
			"dflags": ["-mcpu=native"],
			"dflags-ldc": ["-mattr=-prefer-256-bit,prefer-mask-registers"],
			"versions": ["AVX_512F"]
		},
		"release": {
			"buildOptions": ["releaseMode", "inline", "optimize"],
			"dflags-ldc": ["-linkonce-templates"]
		},
		"release-native": {
			"buildOptions": ["releaseMode", "inline", "optimize"],
			"dflags": ["-mcpu=native"],
			"dflags-ldc": ["-linkonce-templates"]
		},
		"release-native-512": {
			"buildOptions": ["releaseMode", "inline", "optimize"],
			"dflags": ["-mcpu=native"],
			"dflags-ldc": ["-linkonce-templates", "-mattr=-prefer-256-bit,+prefer-mask-registers"],
			"versions": ["AVX_512F"]
		},
		"release-native-dbinf": {
			"buildOptions": ["releaseMode", "inline", "optimize", "debugInfo"],
			"dflags": ["-mcpu=native"],
			"dflags-ldc": ["-linkonce-templates"]
		},
		"release-native-dbinf-512": {
			"buildOptions": ["releaseMode", "inline", "optimize", "debugInfo"],
			"dflags": ["-mcpu=native"],
			"dflags-ldc": ["-linkonce-templates", "-mattr=-prefer-256-bit,+prefer-mask-registers"],
			"versions": ["AVX_512F"]
		}
    }
}
